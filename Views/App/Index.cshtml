@model IEnumerable<JobApp>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">My Applications</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-asp-controller="App" asp-action="Create" class="btn btn-primary">
                Add Application
            </a>
        </div>
    </div>

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Company Name
            </th>
            <th>
                Position
            </th>
            <th>
                Status
            </th>
            <th>
                Link
            </th>
            <th>
               Resume
            </th>
            <th>
                Date Applied
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="16.6%">
                    @obj.CompanyName
                </td>
                <td width="16.6%">
                    @obj.Position
                </td>
                <td width="16.6%">
                    @obj.Status
                </td>
                <td width="16.6%">
                    @obj.Link
                </td>
                <td width="16.6%">
                    @obj.Resume
                </td>
                <td width="16.6%">
                    @obj.DateApplied
                </td>
            </tr>

        }
    </tbody>
</table>
</div>